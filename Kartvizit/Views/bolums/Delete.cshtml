@model kartvizit.Models.bolum

@{
    ViewData["Title"] = "Silme İşlemini Onayla";
}

<section class="checkout-page">
    <div class="auto-container">

        <!--Checkout Details-->
        <div class="checkout-form">

            <h4>Bu kaydı silerseniz bu kategoriye bağlı firmalar listelenmeyecektir. Silmek istediğinize emin misiniz?</h4>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.shortDesc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.shortDesc)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.longDesc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.longDesc)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.orderId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.orderId)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="bolumId" />
                    <input type="submit" value="Sil" class="btn btn-danger" /> |
                    <a asp-action="AdminIndex" asp-controller="bolums">Geri Dön</a>
                </form>
            </div>
        </div>
    </div>
</section>
