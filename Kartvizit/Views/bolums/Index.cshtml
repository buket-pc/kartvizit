@model IEnumerable<kartvizit.Models.bolum>

@{
    ViewData["Title"] = "Kategoriler";
}

<!--Page Title-->
<section class="page-title" style="background-image: url(../images/background/8.jpg);">
    <div class="auto-container">
        <div class="title-outer">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">Anasayfa</a></li>
                <li>Kategoriler</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->

<!-- Top Features -->
<section class="top-features">
    <div class="auto-container">
        <div class="row">
            @foreach (var item in Model)
            {

                <!-- Feature Block -->
                <div class="feature-block col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-box">
                        <span class="icon flaticon-charity"></span>
                        <h4><a href="#">@Html.DisplayFor(modelItem => item.name)</a></h4>
                        <p>@Html.DisplayFor(modelItem => item.shortDesc)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Features Section -->


