@model IEnumerable<kartvizit.Models.firma>

@{
    ViewData["Title"] = "Firmalar";
}
<link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css" />

<section class="team-section-two alternate alternate2">
    <div class="auto-container">
        <div class="row">
            <div class="sec-title">
                <h3>@ViewData["Title"] - (@ViewData["bolumAdi"])</h3>
            </div>
        </div>
        <p>
            <a asp-action="Create" asp-route-id="@ViewData["bolumid"]">Yeni Ekle</a><br /><br />
        </p>

        <div class="row">
            <table id="firmatable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.shortDesc)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.address)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.shortDesc)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.firmaId">Düzenle</a> |
                                <a asp-action="Delete" asp-route-id="@item.firmaId">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div><a asp-action="AdminIndex" asp-controller="bolums">Kategorilere geri dön</a></div>
    </div>
</section>

@section Scripts
{
    <script src="~/js/jquery-3.5.1.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#firmatable').DataTable({
                "order": [[3, "desc"]]
            });
        });

    </script>
}
